<Nav::SlideBar>
    <div class="container-fluid">
        <h1 class="h3 mb-2 text-gray-800">Thông tin cá nhân</h1>

        <form>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="text-dark">Họ</label>

                    <Input name="LastName" type="text" class="form-control" @value={{@model.lastName}} />
                </div>
                <div class="form-group col-md-6">
                    <label class="text-dark">Tên</label>

                    <Input name="FirstName" type="text" class="form-control" @value={{@model.firstName}} />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="text-dark">Điện thoại</label>

                    <Input name="Phone" type="text" class="form-control" @value={{@model.phone}} />
                </div>
                <div class="form-group col-md-6">
                    <label class="text-dark">Giới tính</label>

                    <Input name="Gender" type="text" class="form-control" @value={{@model.gender}} />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label class="text-dark">Địa chỉ</label>

                    <div>
                        <Textarea name="Address" rows="3" class="form-control" @value={{@model.address}}
                            maxlength="500" />
                    </div>
                </div>
            </div>
            <a role="button" class="btn text-white theme-button mt-4 mb-4" data-blast="bgColor" {{on 'click' this.submit}}>Lưu</a>
            <LinkTo @route="home" class="btn text-white theme-button mt-4 mb-4" data-blast="bgColor">
                Quay lại</LinkTo>
        </form>
    </div>
</Nav::SlideBar>
<div id="snackbar">Welcome to KTBank!</div>
<ChangeColor />